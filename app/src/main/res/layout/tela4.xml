        android:text="   E-mail"
        android:textColor="#8D8C8C"
        app:layout_constraintTop_toBottomOf="@+id/editText7"
        tools:layout_editor_absoluteX="20dp" />


    <EditText
        android:id="@+id/editText9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:drawableStart="@drawable/rounded_add_moderator_24"
        android:padding="12dp"
        android:text="  Senha"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textColor="#8D8C8C"
        app:layout_constraintTop_toBottomOf="@+id/editText8"
        tools:layout_editor_absoluteX="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.5"
        android:scaleY="0.5"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="320dp" />

    <TextView
        android:layout_width="313dp"
        android:layout_height="34dp"
        android:text="Seja o primeiro a conhecer novos cursos e grandes ofertas"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="334dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        tools:layout_editor_absoluteX="-20dp"
        android:text="Cadastrar-se"
        android:backgroundTint="#0DC716"
        android:textSize="17dp"
        app:cornerRadius="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JÃ¡ tem uma conta?"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"
        android:layout_marginStart="75dp"
        android:textSize="15dp"
        />

    <Button
        android:layout_width="177dp"
        android:layout_height="45dp"
        android:layout_marginTop="488dp"
        android:backgroundTint="#CAC8C8"
        android:text="Acessar"
        android:textColor="#546CD7"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="214dp" />


